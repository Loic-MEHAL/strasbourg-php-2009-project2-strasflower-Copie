        </div> 
<!-- Affichage de quelques articles -->
        <div class="card-deck mt-5 row justify-content-around">
            {% for article in articles %}
                <div class="card col-3">
                    <div class="view overlay">
                        <img class="card-img-top mt-4" src="/assets/images/articles/{{article.image}}" alt="Card image cap">
                        <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-2">{{article.nom}}</h5>
                        <p class="card-text">{{article.description}}</p>
<!-- Button trigger modal -->
                        <div>
                            <button type="button" class="col btn btn-ultra-voilet btn-rounded" data-toggle="modal" data-target="#article{{article.id}}">
                                Voir cet article
                            </button>
<!-- Modal -->
                            <div class="modal fade" id="article{{article.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title text-center" id="exampleModalLongTitle">{{article.nom}}</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <img class="card-img-top" src="/assets/images/articles/{{article.image}}" alt="Card image cap">
                                            <p class="card-text">{{article.description}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
<!-- Bouton "Voir plus" -->
        <div class="row mt-5 justify-content-center"> 
            <div class="col-4 align-self-center">
                <a href="/Articles/showArticles"><button class="col btn btn-ultra-voilet btn-rounded"><h4>Voir plus !<h4></button></a>
            </div>
        </div>
    </section>
{% endblock %}
